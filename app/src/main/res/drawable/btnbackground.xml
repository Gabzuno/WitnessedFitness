<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#9e9190">

    <item>

        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#6b0d0d"
                android:endColor="#6b0d0d"/>
            <corners android:radius="50dp"/>

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                />

            <size
                android:width="150dp"
                android:height="25dp"
                />

        </shape>

    </item>

</ripple>