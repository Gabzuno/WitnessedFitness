<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Credentials.Intro_BMI">

    <RelativeLayout
        android:id="@+id/RegLogo"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-200dp"
        android:layout_marginLeft="-200dp"
        android:layout_marginTop="-200dp"
        android:layout_marginEnd="-200dp"
        android:layout_marginBottom="-200dp"
        android:background="@drawable/credentials_bg1"
        tools:ignore="RtlHardcoded,VisualLintBounds">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="230dp"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtUsername"
        android:layout_below="@+id/RegLogo"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="250dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/goToBMI"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/txtUsername"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif-black"
        android:backgroundTint="#FF4C29"
        android:padding="20dp"
        android:text="Let's calculate!"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

</RelativeLayout>