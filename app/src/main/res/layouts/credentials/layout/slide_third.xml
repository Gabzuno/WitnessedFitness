<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#1E1D1D">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/slide_title"/>

    <TextView
        android:id="@+id/begin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"
        android:padding="30dp"
        android:text="@string/slide_thirdTitle"
        android:textAlignment="textEnd"
        android:textColor="#fff8f1"
        android:textSize="50sp"
        tools:ignore="TextContrastCheck" />

    <RelativeLayout
        android:id="@+id/gifExe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/begin_title"
        android:background="@color/black">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="345dp"
            android:layout_height="260dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_gif"
            tools:ignore="ImageContrastCheck" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gifExe"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/slide_thirdString"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/goToSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gifExe"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="sans-serif-black"
        android:backgroundTint="#FF4C29"
        android:text="Let's get started!"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

</RelativeLayout>